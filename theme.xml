<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="Aeolus Theme " version="1.0.0" date="2022-07-26" compatibility="2.3.1">
	<author name ="Jimako" url="https://www.e107sk.com" />
	<summary lan="">AEOLUS Bootstrap 5 e107 theme based on AYRO UI Components</summary>
	<description lan="">AEOLUS The god of the winds.</description>
	<keywords>
		<word>bootstrap</word>
		<word>responsive</word>
	</keywords>
	<category>generic</category>
	<screenshots>
		<image>aeolus-preview.jpg</image>
	</screenshots>
 	<libraries>
		<library name="bootstrap" version="5" scope="front"/>
        <library name="fontawesome" version="5" scope="front" files="js" />
		<library name="fontawesome" version="5" scope="wysiwyg" files="css" />
	</libraries>
	<stylesheets>
        <css file="default.css" name="Default" default='true'  scope='front'/>
        <css file="assets/css/lineicons.min.css" name="Default" scope='wysiwyg' />
        <css file="theme.css" name="Theme css" scope='wysiwyg' />
	</stylesheets>   
	<layouts>
		<layout name='home' title='Home Page 1 Header' >
			<custompages>FRONTPAGE</custompages>
		</layout>
		<layout name='full' title='Full Page' default='true' >
			<custompages>forum/ download/</custompages>
		</layout>
        <layout name='cpage'
            title='Layout for custom pages'
            default='true'>
            <custompages>:page/view/index :page/view/other</custompages>
        </layout>
		<layout name='sidebar_right' title='Sidebar (right)'>
        <custompages>:news/view/item</custompages>
        </layout>
		<layout name='splash' title='Splash Page' >
			<custompages>login fpw signup</custompages>
		</layout>
        <layout name='bare'
            title='No page title' >
            <custompages></custompages>
        </layout>
	</layouts>
    <glyphicons>
		<glyph name='lineicons' pattern='\.(lni-[a-z-]*)::before\{'  path='assets/css/lineicons.min.css' class='lni' prefix='lni' tag='i' />
	</glyphicons>
</e107Theme>
